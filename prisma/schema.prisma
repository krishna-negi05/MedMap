generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "sqlite" for quick local testing
  // url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  // Add this line to store hashed passwords
  name      String?
  year      Int      @default(1)
  createdAt DateTime @default(now())
  notes     Note[]
  progress  TopicProgress[]
  mindmaps  Mindmap[]
  flashcards FlashcardDeck[]
  toolHistory ToolHistory[]
  cases     SavedCase[]
  feedback      Feedback[]
  mindmapDepth     Int             @default(3)
  contentDensity   String          @default("standard") // 'compact', 'standard', 'spacious'
  defaultDifficulty String         @default("Intermediate") // 'Beginner', 'Intermediate', 'Advanced'
  autoProgress     Boolean         @default(true)
  roadmapReminders Boolean         @default(true)
  role      String
  avatar    String?
  theme     String?  
  resetToken        String?
  resetTokenExpiry  DateTime?
}

model Note {
  id        String   @id @default(cuid())
  topicId   String
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  updatedAt DateTime @updatedAt
}

model TopicProgress {
  id          String   @id @default(cuid())
  topicId     String
  isCompleted Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  @@unique([userId, topicId])
}

model Mindmap {
  id        String   @id @default(cuid())
  topic     String   // The search term (e.g., "Cardiac Cycle")
  data      Json     // The entire JSON structure of the mindmap
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FlashcardDeck {
  id        String   @id @default(cuid())
  topic     String
  cards     Json     // Stores the array of cards
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model ToolHistory {
  id        String   @id @default(cuid())
  toolType  String   // 'pharma', 'labs', 'viva'
  title     String   // Search query or summary (e.g., "Aspirin + Warfarin")
  data      Json     // The result object
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model SavedCase {
  id         String   @id @default(cuid())
  title      String
  difficulty String
  data       Json     // Stores the full case (vitals, history, steps)
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
}

model Feedback {
  id        String   @id @default(cuid())
  category  String
  rating    Int
  message   String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}